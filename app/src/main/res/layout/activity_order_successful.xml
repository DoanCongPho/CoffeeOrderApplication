<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:id="@+id/main"
    tools:context=".Order_successful">


    <!-- Icon -->
    <ImageView
        android:id="@+id/successIcon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_order_success"
        android:layout_marginBottom="24dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Success"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="12dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your order has been placed successfully.\nFor more details, go to my orders."
        android:textSize="14sp"
        android:textColor="#888888"
        android:gravity="center"
        android:layout_marginBottom="40dp" />

    <!-- Button -->
    <Button
        android:id="@+id/trackOrderButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Track My Order"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#2F3C4E"/>

</LinearLayout>